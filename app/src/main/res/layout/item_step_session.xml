<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="4dp"
    card_view:cardCornerRadius="8dp"
    android:layout_margin="8dp"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Delete Button at top-right -->
        <Button
            android:id="@+id/btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:backgroundTint="@android:color/holo_red_light"
            android:textColor="@android:color/white"
            android:padding="6dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"/>

        <!-- Walk Summary (top-left) -->
        <TextView
            android:id="@+id/textWalkSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Walk Summary"
            android:textStyle="bold"
            android:textSize="22sp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/btnDelete"
            android:layout_marginEnd="8dp"/>

        <!-- Date (under Walk Summary) -->
        <TextView
            android:id="@+id/textDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_below="@id/textWalkSummary"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"/>

        <!-- Steps -->
        <TextView
            android:id="@+id/textSteps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steps:"
            android:layout_below="@id/textDate"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"/>

        <!-- Distance -->
        <TextView
            android:id="@+id/textDistance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance:"
            android:layout_below="@id/textSteps"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"/>

        <!-- Duration -->
        <TextView
            android:id="@+id/textDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration:"
            android:layout_below="@id/textDistance"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"/>

        <!-- Speed -->
        <TextView
            android:id="@+id/textSpeed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Speed:"
            android:layout_below="@id/textDuration"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"/>

        <!-- Calories -->
        <TextView
            android:id="@+id/textCalories"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calories:"
            android:layout_below="@id/textSpeed"
            android:layout_alignParentStart="true"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"/>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
